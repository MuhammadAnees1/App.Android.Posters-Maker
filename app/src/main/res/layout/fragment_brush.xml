<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_green"
    tools:context=".BrushFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:background="@color/medium_green"
        android:padding="2dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/baseline_deblur_24"
        android:text="Size"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/brushSize"
        android:layout_marginBottom="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/brushSize"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"

        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:id="@+id/colorPick"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginHorizontal="7dp"
            android:layout_weight="1"
            android:background="@color/medium_green"

            android:src="@drawable/colorpicker" />

        <ImageView
            android:id="@+id/brush"
            android:layout_width="40dp"

            android:layout_height="40dp"
            android:layout_marginHorizontal="7dp"
            android:layout_weight="1"
            android:background="@color/medium_green"
            android:src="@drawable/baseline_brush_24" />

        <ImageView
            android:id="@+id/eraser"
            android:layout_width="40dp"

            android:layout_height="40dp"
            android:layout_marginHorizontal="7dp"
            android:layout_weight="1"
            android:background="@color/medium_green"

            android:src="@drawable/ic_eraser" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="7dp"
            android:layout_weight="1"
            android:background="@color/medium_green"

            android:src="@drawable/baseline_tick" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>