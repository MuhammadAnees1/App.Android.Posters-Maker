<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".HomeFragment1">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/editTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#34AE91"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/Image_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#34AE91"
        android:visibility="gone"
        android:paddingVertical="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TypeTextLayout">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Image_control_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/settings"
            android:text="Control"
            android:textColor="#FFF7F7"
            app:layout_constraintStart_toStartOf="parent"

            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/filterSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableTop="@drawable/baseline_filter_frames_24"
            android:text="Filter"

            android:textColor="#FFF7F7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TypeTextLayout"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Image_control_opacity"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="20dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableTop="@drawable/transparency"
            android:text="Opacity"
            android:textColor="#FFF7F7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TypeTextLayout"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
    <SeekBar
        android:id="@+id/seekBarFor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="80dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/Image_buttons"
        tools:ignore="MissingConstraints" />
    <SeekBar
        android:id="@+id/seekBarForspace"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="80dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/Image_buttons"
        tools:ignore="MissingConstraints" />
    <SeekBar
        android:id="@+id/seekBarForOpacity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="80dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/Image_buttons"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/hueLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Image_buttons"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/hueRecycler"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        tools:ignore="MissingConstraints" />
    </LinearLayout>
    <SeekBar
        android:id="@+id/seekBarForSize"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="80dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/Image_buttons"
        tools:ignore="MissingConstraints" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/TypeTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLayout"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/Text_buttonsUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:paddingHorizontal="10dp"
        android:background="#AEEDDE"
        app:layout_constraintTop_toTopOf="@+id/seekBarFor">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/FlipButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:visibility="gone"
            android:background="@drawable/brush_bg"
            android:drawableTop="@drawable/flip"
            android:text="Flip"
            android:textColor="@color/white"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/EditButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/brush_bg"
            android:drawableTop="@drawable/baseline_edit_24"
            android:text="Edit"
            android:textColor="@color/white"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="45"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/UpButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/brush_bg"
                android:src="@drawable/baseline_keyboard_arrow_up_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/DownButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toStartOf="@+id/UpButton"
                android:background="@drawable/brush_bg"
                android:drawableTop="@drawable/baseline_keyboard_arrow_down_24"
                android:src="@drawable/baseline_keyboard_arrow_down_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/LeftButton"
                app:layout_constraintTop_toBottomOf="@+id/RightButton" />

            <ImageView
                android:id="@+id/LeftButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@+id/RightButton"
                android:layout_weight="1"
                android:layout_margin="2dp"

                android:background="@drawable/brush_bg"
                android:src="@drawable/baseline_keyboard_arrow_left_24"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/UpButton" />

            <ImageView
                android:id="@+id/RightButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@+id/DownButton"
                android:layout_margin="2dp"

                android:src="@drawable/baseline_chevron_right_24"
                android:background="@drawable/brush_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/UpButton"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/copy_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/brush_bg"
            android:drawableTop="@drawable/baseline_content_copy_24"
            android:text="Copy"
            android:textColor="@color/white" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6F424242"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLayout"
        tools:ignore="MissingConstraints" />
    <FrameLayout
        android:id="@+id/font_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6F424242"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLayout"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/LayoutControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:paddingHorizontal="10dp"
        android:background="#AEEDDE"
        app:layout_constraintTop_toTopOf="@+id/seekBarFor">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zoomIn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:background="@drawable/brush_bg"
            android:drawableTop="@drawable/baseline_edit_24"
            android:textSize="11sp"
            android:text="Zoom \nIn"
            android:textColor="@color/white"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="45"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/zoomUpButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/brush_bg"
                android:src="@drawable/baseline_keyboard_arrow_up_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/zoomDownButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toStartOf="@+id/zoomUpButton"
                android:background="@drawable/brush_bg"
                android:drawableTop="@drawable/baseline_keyboard_arrow_down_24"
                android:src="@drawable/baseline_keyboard_arrow_down_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/zoomLeftButton"
                app:layout_constraintTop_toBottomOf="@+id/zoomRightButton" />

            <ImageView
                android:id="@+id/zoomLeftButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@+id/zoomRightButton"
                android:layout_weight="1"
                android:layout_margin="2dp"

                android:background="@drawable/brush_bg"
                android:src="@drawable/baseline_keyboard_arrow_left_24"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/zoomRightButton" />

            <ImageView
                android:id="@+id/zoomRightButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@+id/zoomDownButton"
                android:layout_margin="2dp"

                android:src="@drawable/baseline_chevron_right_24"
                android:background="@drawable/brush_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/zoomUpButton"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zoomOut"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/brush_bg"
            android:drawableTop="@drawable/baseline_content_copy_24"
            android:text="Zoom Out"
            android:textSize="11sp"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>