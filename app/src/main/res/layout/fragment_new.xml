<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95AEEDDE"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/rootView1"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/category_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_background"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" >

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Design"
                android:elevation="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/logo"
                android:layout_gravity="end"
                tools:ignore="MissingConstraints" />

        </androidx.appcompat.widget.Toolbar>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_toolbar">

            <TextView
                android:id="@+id/custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/card_view_background"
                android:padding="25dp"
                android:text="CUSTOM"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/s16by9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/card_view_background"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:text="16:9"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"  />


            <TextView
                android:id="@+id/s9by16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:background="@drawable/card_view_background"
                android:gravity="center"
                android:paddingVertical="30dp"
                android:paddingHorizontal="10dp"
                android:text="9:16"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/s3by4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:textColor="@color/white"
                android:background="@drawable/card_view_background"
                android:paddingHorizontal="20dp"
                android:paddingVertical="30dp"
                android:text="3:4"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s4by3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="20dp"
                android:textColor="@color/white"

                android:background="@drawable/card_view_background"
                android:layout_gravity="center"
                android:paddingHorizontal="30dp"
                android:paddingVertical="20dp"
                android:text="4:3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/s1by1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:textColor="@color/white"

                android:background="@drawable/card_view_background"
                android:padding="25dp"
                android:text="1:1"
                android:textSize="16sp"
                android:textStyle="bold"  />
        <TextView
            android:id="@+id/fb_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/card_view_background"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:paddingHorizontal="30dp"
            android:text="Facebook \n cover"
            android:textColor="@color/white"
            android:textSize="16sp"
             />
        <TextView
            android:id="@+id/instaStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:background="@drawable/card_view_background"
            android:gravity="center"
            android:paddingVertical="30dp"
            android:paddingHorizontal="10dp"
            android:text="Insta \nstory"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/instaPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:background="@drawable/card_view_background"
            android:gravity="center"
            android:padding="20dp"
            android:text="Insta \npost"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/frameContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/card_view_background"
        android:backgroundTint="@color/medium_green"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginHorizontal="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/black"

            android:text="Width:"
            android:textSize="30sp"/>
        <EditText
            android:id="@+id/width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:padding="8dp"
            android:inputType="number"
            android:maxLength="4"

            android:layout_weight="1"
            android:background="@color/white"
            android:hint="Input height of Image"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/black"
                android:text="Height:"
                android:textSize="30sp"/>
            <EditText
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:padding="8dp"
                android:inputType="number"
                android:maxLength="4"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="Input height of Image"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:text="Cancel"
                android:textSize="20sp"
                android:background="@drawable/card_view_background"
                android:layout_weight="1"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:text="OK"
                android:textSize="20sp"
                android:background="@drawable/card_view_background"
                android:layout_weight="1"
                />


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>